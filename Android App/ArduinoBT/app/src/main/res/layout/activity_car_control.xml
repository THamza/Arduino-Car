<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.car_control.led.com.led_on_off.car.ledControl">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Car Controller "
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/forward_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Foward"
        android:textColor="#212121"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Backward"
        android:textColor="#212121"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Left"
        android:textColor="#212121"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/right_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Right"
        android:textColor="#212121"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dis_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/rounded_button"
        android:fadingEdge="none"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Disconnect"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/abt_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="About"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dis_btn" />

    <Switch
        android:id="@+id/autoPilotSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="AutoPilot  "
        android:textColor="@color/abc_input_method_navigation_guard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
